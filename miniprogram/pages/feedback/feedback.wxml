<view class="fb_page">
  <form  bindsubmit="formSubmit" >
  
  
  
  
  <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
    <view class="picker">
      <view class="fb-type">
        <view class="type-label">{{array[index]}}</view>
        <image class="type-icon" src="http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/pickerArrow-a8b918f05f.png"></image>

      </view>
    </view>
  </picker>
  <view class="fb-body">
    <textarea class="content" bindinput="textInput" maxlength="500" name="textarea" value="{{textValue}}" placeholder="对我们网站、商品、服务，你还有什么建议吗？你还希望在严选上买到什么？请告诉我们..." />
    <view class="text-count">{{textLen}}/500</view>
  </view>
  <view class="fb-mobile">
    <view class="label">手机号码</view>
    <view class="mobile-box">
      <input class="mobile" type="tel" maxlength="11" name="tel" placeholder="方便我们与你联系" />
      <image class="clear-icon" src="http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/clear-fb-dd9d604f86.png"></image>
    </view>
  </view>

  <button class="fb-btn" form-type="submit">提交</button>
  </form>
</view>