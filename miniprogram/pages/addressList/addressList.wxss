/* pages/addressList/addressList.wxss */

.container{
  height: 100%;
}

.ad_item{
  width: 100%;
  min-height: 154rpx;
  background: #fff;
  margin-top: 24rpx;
  padding:0rpx 32rpx;
  box-sizing: border-box;
}

.info_panel{
  width: 100%;
  min-height: 169rpx;
  position: relative;
  display: flex;
}

.userInfo{
  font-size: 30rpx;
  color: #333;
  display: flex;
  padding-top: 32rpx;
  font-weight: 700;
  margin-bottom: 18rpx;
}

.r_name{
  max-width: 260rpx;
  margin-right: 42rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.address{
  font-size: 26rpx;
  color: #333;
  text-align: justify;
  padding-bottom: 28rpx;
  word-break:break-all;
  padding-right:20rpx;
}

.item_left{
  flex: 1;
}

.item_right{
  width: 100rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.edit{
  height: 88rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.edit>.edit_btn{
  width: 106rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  font-size: 30rpx;
  color: #333;
  margin-right: 32rpx;
  position: relative;
}

.edit>.edit_btn::before{
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  border: 1px solid #e5e5e5; 
  border-radius: 4px;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  width: 200%;
  height: 200%;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  -webkit-transform-origin: left top;
  transform-origin: left top;
  pointer-events: none;  
}

.ad_list>.ad_item:last-child{
  margin-bottom: 150rpx;
}

.add_address{
  width: 100%;
  height: 112rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 999;
  font-size: 38rpx;
  font-weight: 500;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cross{
  display: inline-block;
  font-size: 50rpx;
  margin-right: 10rpx;
  margin-top: -6rpx;
}

.asel{
  background: url(https://www.dfs168.com/output/images/dfs168_mall/ca_check.png) no-repeat;
  background-size: contain;
}
.container{
  background-color: #f4f4f4;
}
.uc_item{
  padding-right: 0;
}
.null_text{
  font-size:30rpx;
  line-height:40rpx;
  letter-spacing:-0.2px;
  color:#999;
  text-align:center;
  margin-top: 160rpx;
}
.asel{
  background: url(https://www.dfs168.com/output/images/dfs168_mall/ca_check.png) no-repeat;
  background-size: contain;
}
.asel::after{display: none;}
.asel::before{display: none;}
.sel_area{
  width:80rpx;
  height:80rpx;
  display:flex;
  align-items:center;
}
.ad_list{
  width: 100%;
}
