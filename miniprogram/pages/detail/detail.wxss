/* miniprogram/pages/detail/detail.wxss */
.detail_img{
  width: 100%;
  height: 560rpx;
}
.detail_name{
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    line-height: 1.3;
    -webkit-box-orient: vertical;
    font-size: 34rpx;
    color: #333;
    padding: 16rpx 24rpx;
    background-color: #fff;
}
.detail_price{
  font-size: 30rpx;
  color: #333;
  padding: 0 24rpx;
  margin-top: 16rpx;
}
.detail_btn{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  background: linear-gradient(270deg,#f84035,#ff5146);
}
.btn_item{
  width: 50%;
  font-size: 40rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-weight: bold;
  color: #fff;
  padding: 0;
  border-radius: 0;
}
.btn_item::after{
  border-radius: none;
}
.btn_left{
  /* background: linear-gradient(270deg,#f84035,#ff5146); */
}
.btn_right{
  background: linear-gradient(270deg,#ff8533,#ffc446);
}